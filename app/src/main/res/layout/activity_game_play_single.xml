<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_play_multi"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="com.example.kenkou.partygame.GamePlayMulti"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/BattleLayout"

        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="390dp"
            android:id="@+id/TargetLayout1"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/human"
                android:id="@+id/imageTarget1"
                android:layout_alignParentTop="true"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/human"
                android:id="@+id/imageTarget2"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/human"
                android:id="@+id/imageTarget3"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/TargetLayout2"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/human"
                android:id="@+id/imageTarget4"
                android:layout_alignParentTop="true"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/human"
                android:id="@+id/imageTarget5"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/human"
                android:id="@+id/imageTarget6"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/TargetLayout3"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/human"
                android:id="@+id/imageTarget7"
                android:layout_alignParentTop="true"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/human"
                android:id="@+id/imageTarget8"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/human"
                android:id="@+id/imageTarget9"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:id="@+id/P1DataLayout"
        android:layout_centerHorizontal="true"
        android:layout_height="160dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/TImerLayout">

            <TextView
                android:text="34"
                android:layout_width="wrap_content"
                android:id="@+id/textScoreP1"
                android:textSize="70sp"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:layout_height="80dp"/>

            <TextView
                android:text="00:00"
                android:layout_width="wrap_content"
                android:id="@+id/textTimerP1"
                android:textSize="60sp"
                android:textColor="@android:color/background_light"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_height="70dp"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>